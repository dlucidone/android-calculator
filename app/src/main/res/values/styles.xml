<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/color_primary</item>
		<item name="colorPrimaryDark">@color/color_primary_dark</item>
		<item name="colorAccent">@color/color_accent</item>
		<item name="android:windowBackground">@color/activity_background</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.Button">
		<item name="android:textSize">@dimen/button_text_size</item>
		<item name="android:textColor">@color/button_text</item>
	</style>

	<style name="AppTheme.Button.Numeric" parent="AppTheme.Button">
		<item name="android:background">@drawable/button_numeric</item>
	</style>

	<style name="AppTheme.Button.Operation" parent="AppTheme.Button">
		<item name="android:background">@drawable/button_operation</item>
	</style>

	<style name="AppTheme.Button.Special" parent="AppTheme.Button">
		<item name="android:background">@drawable/button_special</item>
	</style>

</resources>
